            <Label layoutX="90.0" layoutY="122.0" text="Host name:">
               <font>
                  <Font name="Candara Bold" size="24.0" />
               </font>
            </Label>
            <Label layoutX="90.0" layoutY="196.0" text="Neighbourhood:">
               <font>
                  <Font name="Candara Bold" size="24.0" />
               </font>
            </Label>
            <Label layoutX="90.0" layoutY="268.0" text="Room type:">
               <font>
                  <Font name="Candara Bold" size="24.0" />
               </font>
            </Label>
            <Label layoutX="90.0" layoutY="339.0" text="Price:">
               <font>
                  <Font name="Candara Bold" size="24.0" />
               </font>
            </Label>
            <Label fx:id="hostName" layoutX="232.0" layoutY="122.0" textFill="WHITE">
               <font>
                  <Font name="Candara Bold Italic" size="24.0" />
               </font>
            </Label>
            <Label fx:id="neighbourhood" layoutX="283.0" layoutY="196.0" textFill="WHITE">
               <font>
                  <Font name="Candara Bold Italic" size="24.0" />
               </font>
            </Label>
            <Label fx:id="roomType" layoutX="232.0" layoutY="268.0" textFill="WHITE">
               <font>
                  <Font name="Candara Bold Italic" size="24.0" />
               </font>
            </Label>
            <Label fx:id="price" layoutX="175.0" layoutY="339.0" textFill="WHITE">
               <font>
                  <Font name="Candara Bold Italic" size="24.0" />
               </font>
            </Label>
            <Label layoutX="90.0" layoutY="462.0" text="Click to find more about this property in detail !" textFill="WHITE">
               <font>
                  <Font name="Candara" size="18.0" />
               </font>
            </Label>
         </children>
         <effect>
            <DropShadow />
         </effect>
      </AnchorPane>
   </children>
</AnchorPane>
