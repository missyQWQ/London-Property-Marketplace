            <Label layoutX="181.0" layoutY="32.0" styleClass="intro" text="  Introduction  ">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
            <Button layoutX="180.0" layoutY="413.0" mnemonicParsing="false" onAction="#presentDetailBtn" styleClass="detailBtn" text="Detail !">
